<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Location</th>
      <th>Spaces Available</th>
      <th>Date</th>
      <th>Nvite ID</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if events.count > 0 %>
      <% events.each do |event| %>
        <tr>
          <td><%= event.id %></td>
          <td><%= event.title %></td>
          <td><%= event.location %></td>
          <td><%= event.spaces_available %></td>
          <td><%= event.date.strftime("%d-%m-%Y") %></td>
          <td><%= event.nvite_id %></td>
          <td>
            <%= link_to admin_event_path(event.id), class: "button" do %><i class="fa fa-eye" aria-hidden="true"></i><% end %>
            <%= link_to edit_admin_event_path(event.id), class: "button orange" do %><i class="fa fa-pencil" aria-hidden="true"></i><% end %>
            <%= link_to admin_event_path(event.id), method: :delete, data: {confirm: "Are you sure?"}, class: "button red" do %><i class="fa fa-trash" aria-hidden="true"></i><% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr><td colspan="6" style="text-align:center;">No events planned</td><tr>
    <% end %>
  </tbody>
</table>
