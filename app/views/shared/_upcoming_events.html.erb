<section class="row text-center">
  <h2>Upcoming Events</h2>
  <p class="lead">See What's Next!</p>
  <% @events.each do |event| %>
  <div class="col-md-4 event-wrapper">
    <div class="event">
      <!-- workshop -->
      <!-- title of event -->
      <div class="event-btn event-btn-secondary event-workshop-type">
        <h4><%= event.title %></h4>
      </div>
      <div class="event-location">
        <span>Taste of Code<br/>at
          <%= event.location %></span>
      </div>
      <div class="event-date">
        <span><%= event.date.strftime("%B %d") %></span>
      </div>
      <div class="event-time">
        <span>10am â€“ 4pm</span>
      </div>
      <!-- date -->
      <!-- time -->
      <!-- rsvp -->
      <div class="rsvp">
        <script async src="//widgets.nvite.com/1.6/button.js" data-button-text="RSVP" data-resource="<%= event.nvite_id%>" data-class="rsvp-button"></script>
        <!--<button class="event-btn event-btn-secondary rsvp-button">RSVP</button>-->
      </div>
    </div>
  </div>
  <% end %>

</section>
