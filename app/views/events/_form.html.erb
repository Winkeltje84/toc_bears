<%= form_for @event do |f| %>
  <% @event.errors.full_messages.each do |msg| %>
    <p class="alert alert-danger"><%= msg %></p>
  <% end %>

  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Spaces Available</label>
    <%= f.number_field :spaces_available, placeholder: "eg. 25", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Date</label>
    <%= f.date_select :date, placeholder: "eg. 25", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.check_box :public %> InCompany?
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
